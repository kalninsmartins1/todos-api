{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "rspec",
  "isShellCommand": true,
  "tasks": [
    {
      "label": "Run tests",
      "suppressTaskName": true,
      "args": [
        "${file}"
      ],
      "showOutput": "always",
      "problemMatcher": []
    },
    {
      "label": "Check code style",
      "command": "rubocop",
      "problemMatcher": []
    }
  ]
}